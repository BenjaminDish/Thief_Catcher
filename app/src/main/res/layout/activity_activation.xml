<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#8ccc91"
    tools:context="com.example.benjamin.thiefcatcher.ActivationActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/fullscreen_content" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:keepScreenOn="true" android:textColor="#010203"
            android:textStyle="bold" android:textSize="50sp" android:gravity="bottom|center"
            android:text="Activation de l&apos;alarme\n dans"
            android:layout_weight="1"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/textViewCompteur"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:textColor="#010203"
            android:textStyle="bold"
            android:textSize="50sp"
            android:gravity="top|center"
            android:text="10"
            android:layout_weight="1"
            android:layout_marginTop="20dp" />

    </LinearLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
