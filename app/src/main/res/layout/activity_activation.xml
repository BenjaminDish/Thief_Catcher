<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#8ccc91"
    tools:context="com.example.benjamin.thiefcatcher.ActivationActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">


        <TextView
            android:id="@+id/fullscreen_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:textColor="#010203"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="bottom|center"
            android:text="Activation de l&apos;alarme\n dans"
            android:layout_weight="0.3"
            />

        <TextView
            android:id="@+id/textViewCompteur"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:textColor="#010203"
            android:textStyle="bold"
            android:textSize="50sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="10"
            android:layout_weight="0.3"
             />

        <TextView
            android:id="@+id/messageMove"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:textColor="#010203"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="top|center_vertical|center_horizontal"
            android:text=""
            android:layout_weight="0.4"
             />

    </LinearLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
